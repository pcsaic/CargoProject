<?xml version = "1.0" encoding = "UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="2.4">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ServletTruck</servlet-name>
        <servlet-class>net.ServletTruck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletTruck</servlet-name>
        <url-pattern>/truck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTruck</servlet-name>
        <url-pattern>/truck/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDriver</servlet-name>
        <servlet-class>net.ServletDriver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDriver</servlet-name>
        <url-pattern>/driver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDriver</servlet-name>
        <url-pattern>/driver/*</url-pattern>
    </servlet-mapping>
</web-app>
