<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="cargo">

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cargo?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>    <!-- references in to database -->
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>               <!--path to SQL Driver Manager -->
            <property name="hibernate.connection.username" value="root"/>                                    <!--login for database -->
            <property name = "hibernate.connection.password" value="root"/>                                   <!--password for database -->
            <property name="hibernate.dialect" value = "org.hibernate.dialect.MySQL5Dialect"/>                 <!--language of database -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>